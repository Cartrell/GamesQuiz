<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderTheme">
        <item name="android:fontFamily">@font/joystix</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:text">@string/header</item>
        <item name="android:textColor">@color/colorHeaderText</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
    </style>

    <style name="Divider">
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:background">@color/colorQuestionDivider</item>
    </style>

    <style name="QuestionText">
        <item name="android:textColor">@color/colorQuestionText</item>
        <item name="android:textSize">@dimen/answerButtonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:fontFamily">@font/modenine</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="EditText" parent="QuestionText">
        <item name="android:textColor">@color/colorEditText</item>
        <item name="android:textColorHint">@color/colorEditTextHint</item>
    </style>

    <style name="AnswerRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorButtonNormal</item>
        <item name="colorControlActivated">@color/colorButtonActivated</item>
        <item name="colorControlHighlight">@color/colorButtonHighlight</item>

        <item name="android:textColorPrimaryDisableOnly">@color/colorButtonTextPrimaryDisableOnly</item>
        <item name="android:textSize">@dimen/answerButtonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:fontFamily">@font/modenine</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="AnswerCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/colorButtonNormal</item>
        <item name="colorControlActivated">@color/colorButtonActivated</item>
        <item name="colorControlHighlight">@color/colorButtonHighlight</item>

        <item name="android:textColorPrimaryDisableOnly">@color/colorButtonTextPrimaryDisableOnly</item>
        <item name="android:textSize">@dimen/answerButtonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:fontFamily">@font/modenine</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

</resources>
